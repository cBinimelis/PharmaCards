<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:views="clr-namespace:PharmaCards.Views"
             x:Class="PharmaCards.MedicineView">
	<StackPanel Spacing="5" Width="200">
		<Border CornerRadius="15" ClipToBounds="True" BorderBrush="#7FFF22DD" BorderThickness="5">
			<Panel>
				<Panel Height="200" IsVisible="True">
					<PathIcon Foreground="#7FFF22DD" Height="150" Width="150" Data="{StaticResource heart_pulse_regular}" />
				</Panel>
			</Panel>
		</Border>
	</StackPanel>
</UserControl>
